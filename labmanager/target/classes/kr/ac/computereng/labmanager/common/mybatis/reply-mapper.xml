<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.computereng.labmanager.common.reply.repo.IReplyDao"> 
	
	<resultMap type="ReplyDatatype" id="ReplyResult">
		<result property="bno" column="BNO"/>
		<result property="rno" column="RNO"/>
		<result property="replyer" column="REPLYER"/>
		<result property="replytext" column="REPLYTEXT"/>
		<result property="regdate" column="REGDATE"/>
		<result property="updatedate" column="UPDATEDATE"/>
	</resultMap>

	<select id="list" resultMap="ReplyResult">
		SELECT * FROM TBL_REPLY WHERE BNO = #{bno} ORDER BY RNO DESC
	</select>
	
	<insert id="create">
		INSERT INTO TBL_REPLY (BNO, REPLYTEXT, REPLYER)
		VALUES (#{bno},#{replytext},#{replyer})
	</insert>
	
	<update id="update">
		UPDATE TBL_REPLY SET REPLYTEXT = #{replytext}, UPDATEDATE = now()
		WHERE RNO = #{rno}
	</update>
	
	<delete id="delete">
		DELETE FROM TBL_REPLY WHERE RNO = #{rno}
	</delete>

</mapper>